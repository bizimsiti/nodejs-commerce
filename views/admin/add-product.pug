extends ../layout/main-layout.pug
block styles 
    link(rel="stylesheet" href="/css/form.css")
block content
     form(action='/admin/add-product' method='POST')
        .form-group.row
          label.col-sm-2.col-form-label(for='productName') Product Name
          .col-sm-10
            input#name.form-control(type='text' name='name')
        .form-group.row
          label.col-sm-2.col-form-label(for='productName') Price
          .col-sm-10
            input#price.form-control(type='text' name='price')
        .form-group.row
          label.col-sm-2.col-form-label(for='productName') Ä°mage
          .col-sm-10
            input#img.form-control(type='text' name='img')
        .form-group.row
          label.col-sm-2.col-form-label(for='categoryid') Select Category
          .col-sm-10
            select#img.form-control(name='categoryid')
              option(value="-1") select category 
              each category in categories 
                option(value=`${category.id}`)  #{category.name}
        .form-group.row
          label.col-sm-2.col-form-label(for='productName') Description
          .col-sm-10
            input#description.form-control(type='text' name='description')
        .form-group.row
          .col-sm-10.offset-sm-2
            input.btn.btn-primary(type='submit' value='Save Product')